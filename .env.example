# ========================================
# POLYMARKET CONFIGURATION
# ========================================

# OPTION 2: API Key Authentication (if you have Polymarket API credentials)
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_API_SECRET=your_secret_here
POLYMARKET_API_PASSPHRASE=your_passphrase_here

# Common settings
POLYMARKET_CHAIN_ID=137  # Polygon mainnet
POLYMARKET_API_URL=https://clob.polymarket.com

# ========================================
# MONGODB CONFIGURATION
# ========================================
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=polymarket_bot

# ========================================
# BINANCE CONFIGURATION
# ========================================
BINANCE_WS_URL=wss://stream.binance.com:9443/ws

# ========================================
# TELEGRAM ALERTS (Optional)
# ========================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ========================================
# TRADING PARAMETERS
# ========================================
# Total bankroll in USD
BANKROLL=5000

# Maximum position size per arbitrage cluster (% of bankroll)
MAX_ARB_POSITION_PCT=2.0

# Maximum position size per late-market trade (% of bankroll)
MAX_LATE_POSITION_PCT=1.5

# Maximum total daily exposure (% of bankroll)
MAX_DAILY_EXPOSURE_PCT=25.0

# Maximum concurrent positions
MAX_CONCURRENT_POSITIONS=10

# Daily loss limit to halt trading (% of bankroll)
DAILY_LOSS_HALT_PCT=5.0

# Number of consecutive failed arbs before pausing
MAX_CONSECUTIVE_FAILS=3

# ========================================
# STRATEGY PARAMETERS
# ========================================
# Minimum edge required for arbitrage (%)
MIN_ARB_EDGE_PCT=2.0

# Maximum slippage tolerance per leg (%)
MAX_SLIPPAGE_PCT=0.3

# Order timeout in seconds
ORDER_TIMEOUT_SECONDS=5

# Minimum market volume (USD)
MIN_MARKET_VOLUME=5000

# Minimum time to market close (minutes)
MIN_TIME_TO_CLOSE_MINUTES=30

# Maximum spread per outcome for one-of-many arb (%)
MAX_SPREAD_ONE_OF_MANY=2.0

# Maximum spread for base YES/NO arb (%)
MAX_SPREAD_YES_NO=1.5

# Maximum spread for late-market trades (%)
MAX_SPREAD_LATE_MARKET=1.0

# ========================================
# LATE-MARKET STRATEGY PARAMETERS
# ========================================
# Enable late-market strategy
ENABLE_LATE_MARKET=true

# Late-market entry window start (seconds before close)
LATE_MARKET_WINDOW_START=180

# Late-market entry window end (seconds before close)
LATE_MARKET_WINDOW_END=60

# Minimum price deviation from strike for late-market (%)
LATE_MARKET_MIN_DEVIATION_PCT=3.0

# Maximum volatility for late-market entry (%)
LATE_MARKET_MAX_VOLATILITY_PCT=1.5

# Maximum price for late-market entry
LATE_MARKET_MAX_PRICE=0.99

# ========================================
# FEATURE FLAGS
# ========================================
# Enable DRY RUN mode (no real orders)
DRY_RUN=true

# Enable one-of-many arbitrage strategy
ENABLE_ONE_OF_MANY=true

# Enable base YES/NO arbitrage strategy
ENABLE_YES_NO=true

# Scanner interval in seconds
SCANNER_INTERVAL_SECONDS=5

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
